@model  List<ivt_test.Models.QueryWithGsmResult>

@{
    ViewBag.Title = "GSM İzni Sorgula";
}

<h3>GSM İzni Sorgula</h3>
<hr />

@using (Html.BeginForm("CheckWithGsm", "Home", new { transactionId = Request.Form["gsm"] }, FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <form class="form-inline" role="form" method="post" id="reused_form">
        <div class="form-group sm-4">
            <label for="gsm">
                GSM:
            </label>
            <input type="text" class="form-control" id="gsm" name="gsm" value="@Request.Form["gsm"]" required>
        </div>
        <button type="submit" class="btn btn-sm btn-success pull-right">Ara</button>
    </form>
}

<br />
<br />
<table class="table table-bordered">
    <tr>
        <th>msisdn</th>
        <th>recordId</th>
        <th>firstName</th>
        <th>lastName</th>
        <th>msisdnType.id</th>
        <th>msisdnType.text</th>
        <th>createdAt</th>
        <th>updatedAt</th>
        <th></th>
    </tr>
    <tbody>
        @if (Model != null)
        {
            foreach (var coll in Model)
            {
                <tr>
                    <td>@coll.msisdn</td>
                    <td>@coll.recordId</td>
                    <td>@coll.firstName</td>
                    <td>@coll.lastName</td>
                    <td>@coll.msisdnType.id</td>
                    <td>@coll.msisdnType.text</td>
                    <td>@coll.createdAt</td>
                    <td>@coll.updatedAt</td>
                    <td>@Html.ActionLink("GsmDetails", "Home", new { /* id=item.PrimaryKey */ })</td>
                </tr>
            }
        }
    </tbody>
</table>
